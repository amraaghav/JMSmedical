@model JMSmedical.Models.SignupViewModel

@{
    ViewData["Title"] = "Signup";
    }

<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        .Signup {
            display: flex;
            justify-content: center;
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
            align-items: center;
            height: 100vh;
        }

        .a {
            background-color: white;
            width: 400px;
            padding: 25px;
            margin-bottom: 50px;
            border-radius: 15px;
        }

        body {
            background-image: url("/Images/163800857.jpg");
            background-size: cover;
            background-attachment: fixed;
        }
    </style>
</head>
<body class="">
    <div class="Signup">
        <div class="a">
            <h2 class="text-2xl font-semibold mb-6">Create an account</h2>

            <form asp-action="Signup" asp-controller="Signup" method="post">
                <div class="mb-4">
                    <label class="block text-gray-700 mb-2" for="email">Email</label>
                    <input asp-for="Email" class="w-full px-3 py-2 border rounded-lg" type="email" id="email">
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 mb-2" for="password">Password</label>
                    <div class="relative">
                        <input asp-for="Password" class="w-full px-3 py-2 border rounded-lg" type="password" id="password">
                        <a href="#" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-blue-500"></a>
                    </div>
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>
                <button class="w-full bg-blue-500 text-white py-2 rounded-lg" type="submit">Create Acccount</button>
            </form>

            <p class="mt-4 text-center">have an account? <a class="text-blue-500" asp-action="Login" asp-controller="Login">Login Now</a></p>
        </div>
    </div>
</body>
</html>