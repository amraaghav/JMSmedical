<h2>Shopping Cart</h2>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody id="cart-items">
    </tbody>
</table>
<h3>Total: ₹<span id="total-price">0</span></h3>
<a href="/Checkout/Index" class="btn btn-primary">Proceed to Checkout</a>

<script>
    function loadCart() {
        let cart = JSON.parse(localStorage.getItem("cart")) || [];
        let total = 0;
        let cartTable = "";
        cart.forEach(item => {
            let itemTotal = item.price * item.quantity;
            total += itemTotal;
            cartTable += `<tr>
                <td>${item.name}</td>
                <td>₹${item.price}</td>
                <td>${item.quantity}</td>
                <td>₹${itemTotal}</td>
            </tr>`;
        });

        document.getElementById("cart-items").innerHTML = cartTable;
        document.getElementById("total-price").innerText = total;
    }

    window.onload = loadCart;
</script>
