@model List<JMSmedical.Models.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        .cart{
            display:flex;
            justify-content: center;
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
            align-items: center;
        }
        .text{
            text-align:center;
            margin-top:60px;
            margin-right:85px;
        }

        .text1 {
            text-align: center;
            margin-top: 30px;
            margin-right: 90px;
        }

        .cart1 {
            margin-left:300px;
        }
    </style>
    </head>
    <body>
    
        <div class="text">
    <h2 class="text-xl font-bold   ">Your Shopping Cart</h2>
    </div>
@if (!Model.Any())
{
    <div class="cart1">
    <img src="~/Images/Cart.jpg">
    </div>
            <div class="text1">
            <p class="text-gray-600">Your cart is empty!</p>
            </div>
}

else
{
    <table class="table-auto w-full border-collapse border border-gray-300">
        <thead>
            <tr class="bg-gray-100">
                <th class="border px-4 py-2">Image</th>
                <th class="border px-4 py-2">Name</th>
                <th class="border px-4 py-2">Price</th>
                <th class="border px-4 py-2">Quantity</th>
                <th class="border px-4 py-2">Total</th>
                <th class="border px-4 py-2">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="border px-4 py-2">
                        <img src="@item.ImageUrl" alt="@item.Name" class="w-16 h-16 object-cover">
                    </td>
                    <td class="border px-4 py-2">@item.Name</td>
                    <td class="border px-4 py-2">$@item.Price</td>
                    <td class="border px-4 py-2">@item.Quantity</td>
                    <td class="border px-4 py-2">$@(item.Price * item.Quantity)</td>
                    <td class="border px-4 py-2">
                        <a href="@Url.Action("RemoveFromCart", "Cart", new { id = item.Id })" class="text-red-500">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("ClearCart", "Cart")" class="mt-4 px-6 py-2 bg-red-500 text-white rounded hover:bg-red-600">
        Clear Cart
    </a>
}
    <script src="https://cdn.tailwindcss.com"></script>

    </body>
</html>
