@model JMSmedical.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 bg-white rounded">
        <h2 class="text-center text-primary mb-4">Contact Us</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-controller="Contact" asp-action="SubmitForm" method="post">
            <div class="mb-3">
                <label class="form-label">Your Name</label>
                <input type="text" name="Name" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Your Email</label>
                <input type="email" name="Email" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Your Message</label>
                <textarea name="Message" class="form-control" rows="4" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary w-100">Send Message</button>
        </form>

        <div class="text-center mt-4">
            <h4 class="fw-bold">Our Contact Information</h4>
            <p><span class="text-danger">📍</span> Hospital Road, Ara, India</p>
            <p><span class="text-danger">📞</span> +91 6202813534</p>
            <p><span class="text-primary">📧</span> jsmmedicalshop@gmail.com</p>
        </div>

        <!-- Google Maps -->
        <div class="mt-4">
            <iframe class="w-100" height="400"
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7198.7941197271!2d84.66104415586503!3d25.558453545152595!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x398d5f58a0d42be1%3A0xb802c68a32c1aa04!2sArrah%2C%20Bihar!5e0!3m2!1sen!2sin!4v1742232567146!5m2!1sen!2sin"
                    style="border:0;" allowfullscreen loading="lazy">
            </iframe>
        </div>
    </div>
</div>

}
