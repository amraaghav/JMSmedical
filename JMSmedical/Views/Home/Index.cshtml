@model JMSmedical.Models.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<h2 class="text-2xl font-bold text-center mt-8">Welcome to JMS Medical</h2>
<p class="text-center text-gray-600 mt-2">Your trusted online pharmacy and healthcare platform.</p>

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        .product-container {
            display: flex;
            flex-wrap: nowrap;
            overflow-x: auto;
            justify-content: center;
            gap: 20px;
            padding: 10px;
        }

        .product-card {
            text-align: center;
            min-width: 150px;
            cursor: pointer; /* Cursor pointer to indicate it's clickable */
        }

            .product-card img {
                width: 120px;
                height: 120px;
                margin-left:30px;
                object-fit: cover;
                transition: transform 0.2s ease-in-out;
            }

                .product-card img:hover {
                    transform: scale(1.1); /* Slight zoom effect */
                }

        .product-info {
            font-size: 14px;
            color: #555;
            margin-top: 5px;
        }

            .product-info strong {
                color: #000;
            }

        .discount {
            color: red;
            font-weight: bold;
        }

        .img-fluid1{
            margin-left: 30px;
        }
    </style>

    <script>
        function addToCart(productId) {
            window.location.href = `/Cart/AddToCart?id=${productId}`;
        }
    </script>
</head>

<div class="container mt-4">
    <!-- Home Banner -->
    <div class="text-center">
        <img src="~/Images/Banner.jpg" alt="Home Banner" class="img-fluid" style="width: 100%; max-height: 400px; object-fit: cover;">
    </div>

    <!-- Shop by Health Concerns -->
    <div class="container mt-4">
        <h2 class="text-center mt-4">Shop by Health Concerns</h2>
        <div class="product-container">
            @foreach (var category in Model.Categories)
            {
                <div class="product-card" onclick="addToCart(@category.Id)">
                    <img src="@category.ImageUrl" class="img-fluid" alt="@category.Name">
                    <p class="product-info">
                        <strong>@category.Name</strong> | @category.Quantity <br>
                        ⭐ @category.Rating (@category.Reviews ratings) <br>
                        MRP ₹@category.MRP <span class="discount">@category.Discount% off</span> <br>
                        <strong>₹@category.Price</strong>
                    </p>
                </div>
            }
        </div>
    </div>

    <!-- Winter Care Essentials -->
    <div class="container mt-4">
        <h2 class="text-center mt-4">Winter Care Essentials</h2>
        <div class="product-container">
            @foreach (var product in Model.Products)
            {
                <div class="" onclick="addToCart(@product.Id)">
                    <img src="@product.ImageUrl" class="img-fluid1" alt="@product.Name">
                    <p class="product-info">
                        <strong>@product.Name</strong> | @product.Quantity <br>
                        ⭐ @product.Rating (@product.Reviews ratings) <br>
                        MRP ₹@product.MRP <span class="discount">@product.Discount% off</span> <br>
                        <strong>₹@product.Price</strong>
                    </p>
                </div>
            }
        </div>
    </div>
</div>

<footer class="bg-light text-center mt-4 p-3">
    &copy; 2025 JMS Medical. All rights reserved.
</footer>
