@model JMSmedical.Models.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<h2 class="text-2xl font-bold text-center mt-8">Welcome to JMS Medical</h2>
<p class="text-center text-gray-600 mt-2">Your trusted online pharmacy and healthcare platform.</p>

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        .row .col-md-2 col-sm-6 col-6 {
            padding: 10px;
        }

        .row {
            display: flex;
            justify-content: center;
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
            align-items: center;
        }

        body {
            margin-bottom: 60px;
            background-color: white;
        }

        .img-fluid {
            border-radius: 10px;
            padding: 10px;
        }

        .text-center {
            font-weight: bold;
            margin-bottom: 15px;
            color: #333;
            justify-content: center;
        }

        .img-fluid1 {
            border-radius: 10px;
            padding: 50px;
            background-position: center;
        }

        .product-info {
            text-align: center;
            font-size: 14px;
            color: #555;
        }

            .product-info strong {
                color: #000;
            }
    </style>
</head>
<body>

    <div class="container mt-4">
        <!-- Home Banner -->
        <div class="text-center">
            <img src="~/Images/Banner.jpg" alt="Home Banner" class="img-fluid" style="width: 100%; max-height: 400px; object-fit: cover;">
        </div>
        <div class="container mt-4">
            <p class="text-center"><span>JMS</span>Medical - Leading Online Pharmacy</p>
            <h2 class="text-center mt-4">Shop by Health Concerns</h2>
            <div class="row">
                @foreach (var category in Model.Categories)
                {
                    <div class="col-md-2 col-sm-6 col-6">
                        <img src="@category.ImageUrl" class="img-fluid" alt="@category.Name">
                        <p class="category-info">
                            <strong>@category.Name</strong> | @category.Quantity <br>
                            ⭐ @category.Rating (@category.Reviews ratings) <br>
                            MRP ₹@category.MRP <span style="color: red;">@category.Discount% off</span> <br>
                            <strong>₹@category.Price</strong>
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>

    <h2 class="text-center mt-4">Winter care essential</h2>
    <form class="winter">
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-2 col-sm-6 col-6">
                    <img src="@product.ImageUrl" class="img-fluid1" alt="@product.Name">
                    <p class="product-info">
                        <strong>@product.Name</strong> | @product.Quantity <br>
                        ⭐ @product.Rating (@product.Reviews ratings) <br>
                        MRP ₹@product.MRP <span style="color: red;">@product.Discount% off</span> <br>
                        <strong>₹@product.Price</strong>
                    </p>
                </div>
            }
        </div>
    </form>
</body>
</html>

<footer class="bg-light text-center mt-4 p-3">
    &copy; 2025 JMS Medical. All rights reserved.
</footer>
