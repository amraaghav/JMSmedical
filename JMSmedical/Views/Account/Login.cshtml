@model JMSmedical.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
        }

        .login-box {
            background-color: white;
            width: 400px;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        body {
            background-image: url("/Images/163800857.jpg");
            background-size: cover;
            background-attachment: fixed;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="login-box">
            <h2 class="text-2xl font-semibold mb-6">Login to your account</h2>

            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="mb-4">
                    <label class="block text-gray-700 mb-2" for="username">Username</label>
                    <input asp-for="Username" class="w-full px-3 py-2 border rounded-lg" type="text" id="username" required>
                    <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 mb-2" for="password">Password</label>
                    <div class="relative">
                        <input asp-for="Password" class="w-full px-3 py-2 border rounded-lg" type="password" id="password" required>
                        <a href="#" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-blue-500">
                            <i class="fas fa-eye"></i>
                        </a>
                    </div>
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>

                <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg">Login now</button>
            </form>

            <p class="mt-4 text-center">
                Don’t have an account?
                <a class="text-blue-500" asp-controller="Account" asp-action="Signup">Sign up</a>
            </p>
        </div>
    </div>

</body>
</html>
