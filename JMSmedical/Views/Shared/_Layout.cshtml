<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JMS Medical</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body class="bg-white">

    @{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
        var action = ViewContext.RouteData.Values["action"]?.ToString();
        bool isSimplifiedPage = controller == "Login" || controller == "Signup" || controller == "Cart" || controller == "Account" || controller == "Help" || controller == "Contact";
    }

    <header class="bg-white shadow">
        <div class="container mx-auto px-4 py-2 flex items-center justify-between">
            <h1 class="text-2xl font-bold">JMS<span class="text-sm font-light" >Medical</span></h1>

            @if (!isSimplifiedPage)
            {
                <nav class="hidden md:flex space-x-4">
                    <a asp-controller="Home" asp-action="Medicines" class="text-gray-700 hover:text-black">MEDICINES</a>
                    <a asp-controller="About" asp-action="Index" class="text-gray-700 hover:text-black">ABOUT</a>
                    <a asp-controller="Contact" asp-action="Contact" class="text-gray-700 hover:text-black">CONTACT</a>
                </nav>

                <div class="flex items-center space-x-4">
                    <a asp-controller="Cart" asp-action="Cart" class="text-gray-700 hover:text-black">
                        <i class="fas fa-shopping-cart"></i>
                    </a>
                    <a asp-controller="Help" asp-action="Help" class="text-gray-700 hover:text-black">Need Help?</a>
                    <a asp-controller="Account" asp-action="Profile" class="text-gray-700 hover:text-black">
                        <i class="fas fa-user"></i>
                    </a>
                </div>
            }
        </div>

        @if (!isSimplifiedPage)
        {
            <div class="container mx-auto px-4 py-2 flex items-center space-x-2">
                <div class="flex items-center bg-gray-100 p-2 rounded">
                    <i class="fas fa-map-marker-alt text-gray-500"></i>
                    <span class="ml-2 text-gray-700">Arrah</span>
                    <i class="fas fa-cog text-gray-500 ml-2"></i>
                </div>
                <div class="flex-grow">
                    <input type="text" placeholder="Search for medical and health care" class="w-full p-2 bg-gray-100 rounded">
                </div>
                <button class="p-2 bg-gray-100 rounded">
                    <i class="fas fa-search text-gray-500"></i>
                </button>
            </div>
        }
    </header>

    <div class="container mx-auto p-4">
        @RenderBody() @* Content from other views will be injected here *@
    </div>
    @await Html.PartialAsync("_Footer")
</body>
</html>

